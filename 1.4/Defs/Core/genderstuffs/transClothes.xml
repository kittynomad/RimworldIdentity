<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--====== Feminine clothes ======-->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Choker</defName>
    <label>simple choker</label>
    <description>A piece of apparel intended to be worn snug around the neck. Gives the wearer a slightly more feminine appearance.</description>
    <recipeMaker>
      <researchPrerequisite>TransClothesProduction</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/Choker/Choker</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>5</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1600</WorkToMake>
      <Mass>0.05</Mass>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <FemStat>5</FemStat>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
      </bodyPartGroups>
      <!--<wornGraphicPath>Apparel/PlaceholderStuff/Placeholder</wornGraphicPath>-->
      <layers>
        <li>Shell</li>
      </layers>
      <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
    </apparel>
    <modExtensions>
      <li Class="Identity.genderedStuff">
        <isFeminine>true</isFeminine>
      </li>
    </modExtensions>
    <colorGenerator Class="ColorGenerator_StandardApparel" />

  </ThingDef>
  
  

  <!--====== Masculine clothes ======-->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>ChestBinder</defName>
    <label>crude chest binder</label>
    <description>A piece of apparel worn on the chest to reduce the prominence of one's chest. Good for masculinizing transmasc characters. \n This binder's bulky structure means it must be worn on top of most shirts, though it also offers minor protection.</description>
    <recipeMaker>
      <researchPrerequisite>TransClothesProduction</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/Binder/Binder</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1600</WorkToMake>
      <Mass>0.25</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.12</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.5</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <FemStat>-10</FemStat>
    </equippedStatOffsets>
      <apparel>
        <bodyPartGroups>
          <li>Torso</li>
        </bodyPartGroups>
        <wornGraphicPath>Apparel/PlaceholderStuff/Placeholder</wornGraphicPath>
        <layers>
          <li>Middle</li>
        </layers>
        <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
      </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />

  </ThingDef>
  
</Defs>